<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="client.Login">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label styleClass="user-name" text="Enter your user name" />
    <TextField fx:id="nameField" promptText="Enter your name" />
   <HBox prefHeight="0.0" prefWidth="200.0">
      <children>
         <Pane prefHeight="25.0" prefWidth="129.0" HBox.hgrow="ALWAYS" />
          <Button contentDisplay="CENTER" onAction="#handleSubmit" prefHeight="25.0" prefWidth="72.0" styleClass="ranking-button" text="Submit" />
      </children>
   </HBox>
</VBox>
